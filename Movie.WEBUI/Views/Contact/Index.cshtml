@{
    ViewData["Title"] = "Index";
}
@section addcss{

    <link href="~/css/contactus.css" rel="stylesheet" />

    <style>
        .form-contact {
            width: 500px !important;
            margin: 170px auto !important;
        }
    </style>
}


<div class="container">
    <form  class="form-contact">
        <div class="header mb-4">
            <h1>Contact Us</h1>
        </div>
        <div class="mb-3 mt-3">
            <label for="fullname" class="mb-3">Full Name</label>
            <input type="text" class="form-control form-control-contact" id="fullname" placeholder=" Full Name" name="fullname">
        </div>
        <div class="mb-3">
            <label for="email" class="mb-3">Email</label>
            <input type="email" class="form-control form-control-contact" id="email" placeholder=" Email" name="email">
        </div>
        <div class="mb-3 mt-3">
            <label for="Message" class="mb-3">Message</label>
            <textarea class="form-control form-control-contact" rows="5" id="message" name="text" placeholder="Your Message"></textarea>
        </div>
        <button type="submit" class="btn button-contact">Submit</button>
    </form>
</div>
