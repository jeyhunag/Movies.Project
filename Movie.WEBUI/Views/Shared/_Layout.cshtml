    <title>@ViewData["Title"] - Movies-CO</title>
    @RenderSection("addcss",false)
</head>
<body>


    <!-- Partial _Sidebar -->
    <header>
        <div class="logoicons">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/Img/moviec-low-resolution-logo-color-on-transparent-background (2).png" alt="logo" style="width: 120px; height: 30px;">
            </a>
        </div>
        <div class="dropdown">
            <button class=" dropbtn bi bi-person-fill px-1" onclick="myFunction()"></button>
            <div id="myDropdown" class="dropdown-content">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Log Out</a>
                    <a asp-area="" asp-controller="Account" asp-action="ProfileSettings">Profile Settings </a>
                }
                else
                {
                    <a id="open-modal" class="btn-open-modal"> Sign In</a>
                    <a id="open-modal-signup" class="btn-open-modal">Sign Up</a>
                }
            </div>
