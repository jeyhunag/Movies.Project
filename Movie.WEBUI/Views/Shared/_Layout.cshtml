        </div>
        <div class="search-box ">
            <input class="search-txt" placeholder="Search"><i class="bi bi-search "></i>
        </div>
        <div class="Accaunt">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>

        </div>

        <nav class="nav-bar">
            <ul class="mt-3">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="active">HOME</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Movies" asp-action="Index">MOVIES</a>
                </li>
                <li>
                    <a asp-controller="Contact" asp-action="Create">Contact US</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" id="pages">PAGES</a>
                    <div class="dropdown-menu">
