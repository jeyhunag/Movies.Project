@model HomeViewModel


<div class="modal-overlay-sigup">
    <div class="modal-content-sigup">
        <span class="close-button-sigup">&times;</span>
        <h2 class="modal-title-sigup">Sign Up</h2>
        <form class="formModal" method="post" asp-controller="account" asp-action="SignUp">
            <label asp-for="SignUpViewModel.UserName" class="labelModal-signup">Username</label>
            <input asp-for="SignUpViewModel.UserName" type="text" id="username" name="UserName" required>

            <label asp-for="SignUpViewModel.Email" class="labelModal-signup">Email</label>
            <input asp-for="SignUpViewModel.Email" type="text" name="Email" required>

            <label asp-for="SignUpViewModel.Password" class="labelModal-signup">Password</label>
            <input asp-for="SignUpViewModel.Password" type="password" id="password" name="password" required>

            <label asp-for="SignUpViewModel.PasswordConfirm" class="changePassword-signup">Change Password</label>
            <input asp-for="SignUpViewModel.PasswordConfirm" type="password" name="PasswordConfirm" required>

            <div class="form-group">
                <input type="checkbox" name="remember-me">
                <label for="remember-me" class="remember-me mx-2">Remember me</label>
            </div>
            <button type="submit" class="btn-signup">Sign In</button>
        </form>
    </div>
</div>