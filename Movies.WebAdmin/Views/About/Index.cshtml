@model List<AboutDto>
@{
    ViewData["Title"] = "Index";
}

<div class="row" style="display:flex; align-items:center; justify-content:center;">
    <div class="col-lg-10 col-md-6 col-sm-6 col-xs-12" style="margin-top:75px; margin-left:190px">
        <div class="sparkline8-list">
            <div class="sparkline8-hd">
                <div class="main-sparkline8-hd text-white">
                    <h1 style="color:white; display:flex; align-items:center; justify-content:center; font-size:50px;">About</h1>
                    <div style="float:right">
                        <a asp-action="Create" class="btn btn-custon-four btn-primary">Creat About</a>
                    </div>
                </div>
            </div>
            <div class="sparkline8-graph">
                <div class="static-table-list">
                    <table class="table ">
                        <thead>
                            <tr style="color:white; font-size:19px;">
                                <th>Image</th>
                                <th>Id</th>
                                <th> Position</th>
                                <th> Description</th>
                                <th style="display:flex; text-align:end; justify-content:end;">Update || Delete </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="color:white;">
                                    <td class="img-fluid">
                                        <img src="~/@item.Img" style="width:80px; height:50px; border-radius: 30%;">
                                    </td>
                                    <td>@item.Id</td>
                                    <td style="width:200px;">@item.Position</td>
                                    <td>@item.Description</td>

                                    <td style="display:flex; text-align:end; justify-content:end;">
                                        <a class="btn btn-custon-four btn-warning" asp-action="Update" asp-route-id="@item.Id" style="margin-right:8px;">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                            Update
                                        </a>
                                        <a class="btn btn-custon-four btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fa-solid fa-trash-can"></i>
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

