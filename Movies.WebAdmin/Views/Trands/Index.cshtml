@model List<TrandCategoryDto>
@{
    ViewData["Title"] = "Index";
}
<h1 class="text-center display-3 " >Trands Category</h1>
<p class="float-end">
    <a class="ui inverted violet  buttonbtn-lg " asp-action="Create"><i class="hand point right icon pe-5 fs-4"></i>Create New</a>
</p>
<table class="table table-hover ms-5">
    <thead>
        <tr class="table-primary">
            <th>Id</th>
            <th>Name</th>
            <th>Edit| Delete | Details</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr class="table-primary">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-info " asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-brush me-2"></i>Edit</a> |
                        <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3 me-2"></i>Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>