@model UserRoleViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="layout-px-spacing">

    <div class="row layout-top-spacing">

        <form method="post" enctype="multipart/form-data" class="mt-3 my-5" style="width:100%">

            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="UserFullName" class="control-label"></label>
                        <input asp-for="UserFullName" readonly class="form-control" />
                        <input asp-for="UserId" hidden class="form-control" />
                        <span asp-validation-for="UserFullName" class="text-danger"></span>
                    </div>
                </div>


                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label"></label>

                        <select asp-for="RoleName"
                                class="form-control"
                                asp-items="@(new SelectList(Model.Roles, nameof(RoleViewModel.Name), nameof(RoleViewModel.Name)))">
                            <option>Please select one</option>
                        </select>

                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                </div>



            </div>
            <div class="row">

                <div class="col-md-4 control-label">
                    @Html.ActionLink("Listə Geri Dön", "UserIndex", "UserManagment", null, new { @class = "btn btn-primary btn-lg btn-block" })

                </div>
                <div class="col-md-4 control-label">
                    <input id="frmProduct" type="submit" value="Əlavə et" class="btn btn-primary btn-lg btn-block" tabindex="16" />

                </div>

            </div>

        </form>

    </div>
</div>

