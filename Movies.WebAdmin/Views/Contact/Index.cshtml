@model List<ContactDto>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center display-3 ">Contact</h1>

<table class="table table-hover ms-5">
    <thead>
        <tr class="table-primary">
            <th>Id</th>
            <th>Name</th>
            <th>Edit| Delete | Details</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-primary">
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Message</td>
                <td>
                    <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3 me-2"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

