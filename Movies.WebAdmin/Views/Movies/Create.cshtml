@model MovieCDto
@{
    ViewData["Title"] = "Create";
}
@section addcss{
    <style>
        .create-account-sign {
            display: flex;
            align-items: end;
            justify-content: end;
        }

        .label-situation {
            font-size: 5rem;
            background-color: transparent;
            border: none;
            text-align: center;
            position: relative !important;
        }

        .input-situation {
            opacity: 0 !important;
            background-color: transparent;
            position: absolute !important;
            height: 500px !important
        }

        #plus {
            position: absolute;
            margin-top: -130px;
        }
    </style>
}
<div class="single-product-tab-area mg-b-30">
    <!-- Single pro tab review Start-->
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="create-account-sign">
                        <a asp-action="Index" style="margin-top:50px; margin-bottom:-90px"><i class="fa fa-sign-in big-icon"></i></a>
                    </div>
                    <form class="review-tab-pro-inner" enctype="multipart/form-data" method="post" asp-action="Create" style="margin-top:120px; margin-left:220px;">

                        <ul id="myTab3" class="tab-review-design">
                            <li class="active"><a href="#description"><i class="icon nalika-edit" aria-hidden="true"></i> Movie Create</a></li>
                            <li><a href="#reviews"><i class="icon nalika-picture" aria-hidden="true"></i> Image|Video</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content custom-product-edit">
                            <div class="product-tab-list tab-pane fade active in" id="description">
                                <div class="row">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                                        <div class="review-content-section">
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-user" aria-hidden="true"></i></span>
                                                <input asp-for="Name" type="text" class="form-control" placeholder=" Name">
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                <input asp-for="Age" type="text" class="form-control" placeholder="Age">
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                <input asp-for="MovieTime" type="text" class="form-control" placeholder="Movie Time">
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                <input asp-for="Year" type="text" class="form-control" placeholder="Year">
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-favorites" aria-hidden="true"></i></span>
                                                <input asp-for="Director" type="text" class="form-control" placeholder="Director">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                                        <div class="review-content-section">
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                <textarea asp-for="Description" type="text" class="form-control" placeholder="Description"></textarea>
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                <select asp-for="GenresCategoryId" asp-items="@(new SelectList(Model.GenresCategoryDtos, nameof(GenresCategoryDto.Id), nameof(GenresCategoryDto.Name)))"
                                                class="form-control pro-edt-select form-control-primary">
                                                </select>
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                <select asp-for="LanguageCategoryId" asp-items="@(new SelectList(Model.LanguageCategoryDtos, nameof(LanguageCategoryDto.Id), nameof(LanguageCategoryDto.Name)))"
                                                class="form-control pro-edt-select form-control-primary">
                                                </select>
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                <select asp-for="CountryCategoryId" asp-items="@(new SelectList(Model.CountryCategoryDtos, nameof(CountryCategoryDto.Id), nameof(CountryCategoryDto.Name)))"
                                                class="form-control pro-edt-select form-control-primary">
                                                </select>
                                            </div>
                                            <div class="input-group mg-b-pro-edt">
                                                <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                <select asp-for="TrandsId" asp-items="@(new SelectList(Model.TrandCategoryDtos, nameof(TrandCategoryDto.Id), nameof(TrandCategoryDto.Name)))"
                                                class="form-control pro-edt-select form-control-primary">
                                                </select>
                                            </div>
                                            <div class="form-check ms-4">
                                                <input asp-for="Top" class="form-check-input" type="checkbox" value="true" id="flexCheckChecked" checked>
                                                <label asp-for="Top" class="form-check-label" style="color:white;">Top 5 </label>
                                            </div>
                                            <div class="form-check ms-4">
                                                <input asp-for="isneww" class="form-check-input" type="checkbox" value="true" id="flexCheckChecked" checked>
                                                <label asp-for="isneww" class="form-check-label" style="color:white;">New </label>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="text-center custom-pro-edt-ds">
                                            <button type="submit" value="Create" class="btn btn-ctl-bt waves-effect waves-light m-r-10">
                                                Save
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="product-tab-list tab-pane fade" id="reviews">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="review-content-section">
                                            <div class="row">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="col-md-12 form-group label-situation" style="display: flex; justify-content: center; align-items: center;">

                                                    <label asp-for="Img" id="plus" class="form-control" for="file" style="font-size:4rem; background-color:transparent; border:none; text-align:center;">
                                                        Img
                                                    </label>
                                                    <input asp-for="Img" name="imageFile" class="input-situation custom-file-input" type="file" id="createdImage file" width="500" height="500" style="opacity:0;" />
                                                    <img id="createdImage" width="500" height="500" style="display:block;" />

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 form-group label-situation" style="display: flex; justify-content: center; align-items: center;">

                                                   <label asp-for="MovieVideo" id="plus" class="form-control" for="file" style="font-size:4rem; background-color:transparent; border:none; text-align:center;">
                                                        Movie
                                                    </label>
                                                    <input asp-for="MovieVideo" name="videoFile" class="input-situation custom-file-input" type="file" id="createdImage file" width="500" height="500" style="opacity:0;" />
                                                    <img id="createdImage" width="900" height="300" style="display:block;" />
                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 form-group label-situation" style="display: flex; justify-content: center; align-items: center;">

                                                    <label asp-for="Trailer" id="plus" class="form-control" for="file" style="font-size:4rem; background-color:transparent; border:none; text-align:center;">
                                                        Trailer
                                                    </label>
                                                    <input asp-for="Trailer" name="trailerFile" class="input-situation custom-file-input" type="file" id="createdImage file" width="500" height="500" style="opacity:0;" />
                                                    <img id="createdImage" width="900" height="300" style="display:block;" />
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

