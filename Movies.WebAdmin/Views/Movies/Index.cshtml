@model List<MovieC>
@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>


<h1 class="text-center display-3 " style="color:#FF7636;">Movie</h1>
<p class="float-end">
    <a class="ui inverted violet  buttonbtn-lg " asp-action="Create"><i class="hand point right icon pe-5 fs-4"></i>Create New</a>
</p>
<table class="table table-hover ms-5">
    <thead>
        <tr class="table-primary" style="color:#FF7636;">
            <th>Image</th>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>MovieTime</th>
            <th>Description</th>
            <th>Year</th>
            <th>Country</th>
            <th>Director</th>
            <th>Genre</th>
            <th>MovieVideo</th>
            <th>Trailer</th>
            <th>Edit| Delete | Details</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr class="table-primary">
                <td class="img-fluid">
                    <img src="~/Img/@item.Img" style="width:80px; height:50px; border-radius: 30%;">
                </td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.MovieTime</td>
                <td>@item.Description</td>
                <td>@item.Year</td>
                <td>@item.Country</td>
                <td>@item.Director</td>
                <td>@item.Genre</td>
                <td class="img-fluid">
                    <img src="~/Img/@item.MovieVideo" style="width:80px; height:50px; border-radius: 30%;">
                </td>
                <td class="img-fluid">
                    <img src="~/Img/@item.Trailer" style="width:80px; height:50px; border-radius: 30%;">
                </td>

                <td>
                    <a class="btn btn-info " asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-brush me-2"></i>Edit</a> |
                    <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3 me-2"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

