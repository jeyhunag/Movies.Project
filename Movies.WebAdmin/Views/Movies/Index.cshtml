@model List<MovieC>
@{
    ViewData["Title"] = "Index";
}



<h1 class="text-center display-3 " >Movie</h1>
<p class="float-end">
    <a class="ui inverted violet  buttonbtn-lg " asp-action="Create"><i class="hand point right icon pe-5 fs-4"></i>Create New</a>
</p>
<table class="table table-hover ms-5">
    <thead>
        <tr class="table-primary">
            <th>Image</th>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>MovieTime</th>
            <th>Description</th>
            <th>Year</th>
            <th>Country</th>
            <th>Trands</th>
            <th>Director</th>
            <th>Genre</th>
            <th>Language</th>
            <th>Top 5</th>
            <th>New</th>
            <th>MovieVideo</th>
            <th>Trailer</th>
            <th>Edit| Delete | Details</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr class="table-primary">
                <td class="img-fluid">
                    <img style="width:60px; height: 70px" src="~/@item.Img" />
                </td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.MovieTime</td>
                <td>@item.Description</td>
                <td>@item.Year</td>
                <td>@item.CountryCategoryId</td>
                <td>@item.TrendId</td>
                <td>@item.Director</td>
                <td>@item.GenresCategoryId</td>
                <td>@item.LanguageCategoryId</td>
                <td>@item.Top</td>
                <td>@item.isneww</td>
                <td class="img-fluid">
                    <img style="width:60px; height: 70px" src="~/@item.MovieVideo" />
                </td>
                <td class="img-fluid">
                    <img style="width:60px; height: 70px" src="~/@item.Trailer" />
                </td>

                <td>
                    <a class="btn btn-info " asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-brush me-2"></i>Edit</a> |
                    <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3 me-2"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

